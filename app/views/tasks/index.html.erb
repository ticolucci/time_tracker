<% title "Tasks" %>

<table>
  <tr>
    <th>Description</th>
    <th>Begin</th>
    <th>Duration</th>
  </tr>
  <% for task in @tasks %>
    <tr>
      <td><%= task.description %></td>
      <td><%= task.begin %></td>
      <td><%= task.duration %></td>
      <td><%= link_to "Show", task %></td>
      <td><%= link_to "Edit", edit_task_path(task) %></td>
      <td><%= link_to "Destroy", task, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Task", new_task_path(task) %></p>
